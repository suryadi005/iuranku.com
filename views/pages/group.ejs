<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <script src="<%= assetUrl('/external-scripts/circle-progress.js') %>"></script>
    <link rel="stylesheet" href="<%= assetUrl('/styles/circle-progress.css') %>">
</head>
<body class="leading-normal tracking-normal text-white gradient" style="font-family: 'Source Sans Pro', sans-serif;">

    <%- include('../partials/header'); %>


<main>
    <div class="pt-24">
        <div class="container px-3 mx-auto flex flex-wrap flex-col md:flex-row items-center">
            <!--Left Col-->
            <div class="flex flex-col w-full md:w-2/5 justify-center items-start text-center md:text-left">
            <h1 class="my-4 text-5xl font-bold leading-tight">
                Bergabunglah dengan ratusan pengguna iuranku lainnya
            </h1>
            <a href="/daftar" class="mx-auto lg:mx-0 hover:underline bg-white text-gray-800 font-bold rounded-full my-6 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">
                Daftar
            </a>
            </div>
            <!--Right Col-->
            <div class="w-full md:w-3/5 py-6 text-center">
            <%- include('../partials/groub-page-image') %>
            </div>
        </div>
    </div>


    <section id="our-users" class="text-gray-600 body-font overflow-hidden bg-gray-50 border-b py-8">
        <div class="container mx-auto flex flex-wrap pt-4 pb-12">
            <div class="bg-gray-50 text-gray-900 flex flex-wrap overflow-x-scroll">
                <!-- NETFLIX -->
                <div class="flex pb-10 hide-scroll-bar">
                    <div class="flex flex-nowrap lg:ml-40 md:ml-20 ml-10 ">
                        <div class="inline-block px-3">
                            <div class="w-64 h-96 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out">
                                <div
                                    class="bg-white h-full rounded-lg mb-6 flex flex-col relative overflow-hidden shadow-xl"
                                    style="background: black; width: 100%;"
                                >
                                <img src="<%= assetUrl('/images/netflix.jpg') %>" alt="netflix-logo" style="object-fit:scale-down; height:100%;">
                                </div>
                            </div>
                        </div>
                        <!-- ### -->
                        <% for(let i = 0; i < netflixGroups.length; i++) {%>               
                        <div class="inline-block px-3">
                            <div class="w-64 h-96 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out">
                                <div class="bg-white h-full rounded-lg mb-6 flex flex-col relative overflow-hidden shadow-xl">
                                    <span class="bg-indigo-500 text-white px-3 py-1 tracking-widest text-xs absolute right-0 top-0 rounded-bl"><%= netflixGroups[i].layanan%></span>
                                    <div class="h-48">
                                        <div class="text-4xl text-gray-900 mt-4 ml-4">Group id: <%= netflixTotal - i %></div>
                                        <div class="progress-<%= netflixGroups[i].id%> progress-container <%= netflixGroups[i].memberCount === LAYANAN_MAX_MEMBER.Netflix ? 'progress-container-full' : '' %>"></div>
                                        <script id="script-progress-netflix" data-max="<%= LAYANAN_MAX_MEMBER.Netflix %>">
                                            new CircleProgress('.progress-<%= netflixGroups[i].id%>', {
                                                max: parseInt(document.querySelector('#script-progress-netflix').getAttribute('data-max')),
                                                value: parseInt('<%= netflixGroups[i].memberCount %>'),
                                                textFormat: 'vertical',
                                                clockwise: false,
                                                animation: 'none',
                                            });
                                        </script>
                                        </div>
                                        <div class="pt-8 pl-4 pr-4 flex rounded-lg items-center text-gray-900">
                                        <ul class="text-gray-800 text-base px-6 mb-5"> 
                                            <li >Anggota:</li>
                                            <% for(var j = 0; j < netflixGroups[i].orders.length; j++) {%>
                                                <li>
                                                    <div class="relative inline-block pr-2">
                                                        <span style="color: transparent; text-shadow: 0 0 5px rgba(0,0,0,0.5);"><%= netflixGroups[i].orders[j].namaDepan.split("").map(function(c,i){ return i ===0 ? c : "*"  }).join("") %></span>
                                                    </div>
                                                    <div class="relative inline-block pr-2">
                                                        <span style="color: transparent; text-shadow: 0 0 5px rgba(0,0,0,0.5);"><%= netflixGroups[i].orders[j].namaBelakang.split("").map(function(c,i){ return i ===0 ? c : "*"  }).join("") %></span>
                                                    </div>
                                                </li>
                                            <% } %>
                                        </ul>
                                        </div>
                                </div>                                 
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mx-auto flex flex-wrap pt-4 pb-12">
            <div class="bg-gray-50 text-gray-900 flex flex-wrap overflow-x-scroll">
                <!-- SPOTIFY -->
                <div class="flex pb-10 hide-scroll-bar">
                    <div class="flex flex-nowrap lg:ml-40 md:ml-20 ml-10 ">
                        <div class="inline-block px-3">
                            <div class="w-64 h-96 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out">
                                <div
                                    class="bg-white h-full rounded-lg mb-6 flex flex-col relative overflow-hidden shadow-xl"
                                    style="background: black; width: 100%;"
                                >
                                <img src="<%= assetUrl('/images/spotify.png') %>" alt="spotify-logo" style="object-fit:scale-down; height:100%;">
                                </div>
                            </div>
                        </div>
                        <!-- ### -->
                        <% for(let i = 0; i < spotifyGroups.length; i++) {%>               
                        <div class="inline-block px-3">
                            <div class="w-64 h-96 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out">
                                <div class="bg-white h-full rounded-lg mb-6 flex flex-col relative overflow-hidden shadow-xl">
                                    <span class="bg-indigo-500 text-white px-3 py-1 tracking-widest text-xs absolute right-0 top-0 rounded-bl"><%= spotifyGroups[i].layanan%></span>
                                    <div class="h-48">
                                        <div class="text-4xl text-gray-900 mt-4 ml-4">Group id: <%= spotifyTotal + i %></div>
                                        <div class="progress-<%= spotifyGroups[i].id%> progress-container <%= spotifyGroups[i].memberCount === LAYANAN_MAX_MEMBER.Spotify ? 'progress-container-full' : '' %>"></div>
                                        <script id="script-progress-spotify" data-max="<%= LAYANAN_MAX_MEMBER.Spotify %>">
                                            new CircleProgress('.progress-<%= spotifyGroups[i].id%>', {
                                                max: parseInt(document.querySelector('#script-progress-spotify').getAttribute('data-max')),
                                                value: parseInt('<%= spotifyGroups[i].memberCount %>'),
                                                textFormat: 'vertical',
                                                clockwise: false,
                                                animation: 'none',
                                            });
                                        </script>
                                        </div>
                                        <div class="pt-8 pl-4 pr-4 flex rounded-lg items-center text-gray-900">
                                        <ul class="text-gray-800 text-base px-6 mb-5"> 
                                            <li >Anggota:</li>
                                            <% for(var j = 0; j < spotifyGroups[i].orders.length; j++) {%>
                                                <li>
                                                    <div class="relative inline-block pr-2">
                                                        <span style="color: transparent; text-shadow: 0 0 5px rgba(0,0,0,0.5);"><%= spotifyGroups[i].orders[j].namaDepan.split("").map(function(c,i){ return i ===0 ? c : "*"  }).join("") %></span>
                                                    </div>
                                                    <div class="relative inline-block pr-2">
                                                        <span style="color: transparent; text-shadow: 0 0 5px rgba(0,0,0,0.5);"><%= spotifyGroups[i].orders[j].namaBelakang.split("").map(function(c,i){ return i ===0 ? c : "*"  }).join("") %></span>
                                                    </div>
                                                </li>
                                            <% } %>
                                        </ul>
                                        </div>
                                </div>                                 
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mx-auto flex flex-wrap pt-4 pb-12">
            <div class="bg-gray-50 text-gray-900 flex flex-wrap overflow-x-scroll">
                <!-- YOUTUBE -->
                <div class="flex pb-10 hide-scroll-bar">
                    <div class="flex flex-nowrap lg:ml-40 md:ml-20 ml-10 ">
                        <div class="inline-block px-3">
                            <div class="w-64 h-96 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out">
                                <div
                                    class="bg-white h-full rounded-lg mb-6 flex flex-col relative overflow-hidden shadow-xl"
                                    style="background: black; width: 100%;"
                                >
                                <img src="<%= assetUrl('/images/youtube.png') %>" alt="youtube-logo" style="object-fit:scale-down; height:100%;">
                                </div>
                            </div>
                        </div>
                        <% for(let i = 0; i < youtubeGroups.length; i++) {%>               
                        <div class="inline-block px-3">
                            <div class="w-64 h-96 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out">
                                <div class="bg-white h-full rounded-lg mb-6 flex flex-col relative overflow-hidden shadow-xl">
                                    <span class="bg-indigo-500 text-white px-3 py-1 tracking-widest text-xs absolute right-0 top-0 rounded-bl"><%= youtubeGroups[i].layanan%></span>
                                    <div class="h-48">
                                        <div class="text-4xl text-gray-900 mt-4 ml-4">Group id: <%= youtubeTotal + 1 %></div>
                                        <div class="progress-<%= youtubeGroups[i].id%> progress-container <%= youtubeGroups[i].memberCount === LAYANAN_MAX_MEMBER.Youtube ? 'progress-container-full' : '' %>"></div>
                                        <script id="script-progress-youtube" data-max="<%= LAYANAN_MAX_MEMBER.Youtube %>">
                                            new CircleProgress('.progress-<%= youtubeGroups[i].id%>', {
                                                max: parseInt(document.querySelector('#script-progress-youtube').getAttribute('data-max')),
                                                value: parseInt('<%= youtubeGroups[i].memberCount %>'),
                                                textFormat: 'vertical',
                                                clockwise: false,
                                                animation: 'none',
                                            });
                                        </script>
                                        </div>
                                        <div class="pt-8 pl-4 pr-4 flex rounded-lg items-center text-gray-900">
                                        <ul class="text-gray-800 text-base px-6 mb-5"> 
                                            <li >Anggota:</li>
                                            <% for(var j = 0; j < youtubeGroups[i].orders.length; j++) {%>
                                                <li>
                                                    <div class="relative inline-block pr-2">
                                                        <span style="color: transparent; text-shadow: 0 0 5px rgba(0,0,0,0.5);"><%= youtubeGroups[i].orders[j].namaDepan.split("").map(function(c,i){ return i ===0 ? c : "*"  }).join("") %></span>
                                                    </div>
                                                    <div class="relative inline-block pr-2">
                                                        <span style="color: transparent; text-shadow: 0 0 5px rgba(0,0,0,0.5);"><%= youtubeGroups[i].orders[j].namaBelakang.split("").map(function(c,i){ return i ===0 ? c : "*"  }).join("") %></span>
                                                    </div>
                                                </li>
                                            <% } %>
                                        </ul>
                                        </div>
                                </div>                                 
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
 </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>